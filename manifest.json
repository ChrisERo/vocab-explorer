{

  "manifest_version": 2,
  "name": "Vocabulario",
  "version": "1.0",

  "description": "Facilitates Learning of new languages by providing ability to hilight text and lookup words.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "storage",
    "webRequest"
  ],

  "background": {
    "scripts": ["storage.js", "dict_storage.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["get_hilights.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "HootHoot",
    "default_popup": "popup.html"
  }

}
